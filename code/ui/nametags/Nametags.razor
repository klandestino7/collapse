@using System;
@using System.Linq;
@using Sandbox;
@using Sandbox.UI;
@using Facepunch.Collapse;

@namespace Facepunch.Collapse.UI
@attribute [StyleSheet( "/ui/nametags/Nametags.scss" )]
@inherits Panel

@{
    if ( !CollapsePlayer.Me.IsValid() ) return;
}

<root>
    @{
        var players = Entity.All.OfType<CollapsePlayer>();
    }

    @foreach ( var p in players )
    {
        if ( !ShowOwnNametag && Game.LocalPawn == p )
            continue;

        <Nametag Player=@p></Nametag>
    }
</root>

@code
{
    protected override int BuildHash()
    {
        var players = Entity.All.OfType<CollapsePlayer>();
        return HashCode.Combine( players.Count(), ShowOwnNametag );
    }
}
